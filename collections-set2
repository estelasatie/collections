package collections;

import java.util.HashSet;
import java.util.Scanner;
import java.util.Set;

public class ExercicioSet2 {

	public static void main(String[] args) {
		Set<Integer> numeros = new HashSet<Integer>();
		Scanner ler = new Scanner(System.in);

		// lista de números
		numeros.add(1);
		numeros.add(2);
		numeros.add(3);
		numeros.add(4);
		numeros.add(5);
		numeros.add(6);
		numeros.add(7);
		numeros.add(8);
		numeros.add(9);
		numeros.add(10);

		// solicita o número para o usuário
		System.out.println("\nDigite um número:\n");
		int numero = ler.nextInt();

		// verifica se o número está na lista
		if (numeros.contains(numero)) {
			System.out.println("\n\nNúmero " + numero + " encontrado na lista!");
		} else {
			System.out.println("\n\nO número " + numero + " não está na lista!");
		}

	}

}
